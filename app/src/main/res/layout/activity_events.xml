<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="8">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1" android:text="Events" style="@style/Title" />
    <ListView
        android:id="@+id/event_list"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="6"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1" android:text="Add Event"
        android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:layout_marginTop="20dp" android:layout_marginBottom="20dp"/>
</LinearLayout>