<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/status_bar"
        >

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent" android:editText="@string/placeholder_welcome" android:gravity="center"
        android:textSize="16sp" android:textStyle="bold"
            android:id="@+id/welcome_message"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:editText="Settings"
            android:id="@+id/settingsButton"
            android:textSize="16sp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="0dp" android:onClick="enterSettings"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:editText="Log Out"
            android:textSize="16sp" android:layout_toLeftOf="@id/settingsButton"
            android:onClick="logout"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="2.25">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_height="wrap_content"  android:editText="Your Projects"
            android:id="@+id/projectsTitle"
            style="@style/ProjectsViewTitle"/>
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:editText="Category"
            android:layout_alignStart="@+id/categorySelector"
            android:id="@+id/categoryTitle"
            android:gravity="center_horizontal"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_toRightOf="@+id/projectsTitle"
            android:id="@+id/categorySelector"
            android:layout_below="@+id/categoryTitle"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"

            android:layout_below="@+id/categorySelector">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:editText="Add Category"
                android:onClick="addCategory"
                android:textSize="16dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:editText="Delete Category"
                android:onClick="deleteCategory"
                android:id="@+id/deleteCategoryButton"
                android:textSize="16dp"
                />
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_weight="6.75"
        android:layout_height="0dp" android:id="@+id/projectViewList">
    </ListView>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:editText="New Project!" android:onClick="newProject"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:id="@+id/viewInvitesButton"
            android:editText="@string/view_invites"
            android:onClick="viewInvites"/>
    </TableRow>

</LinearLayout>