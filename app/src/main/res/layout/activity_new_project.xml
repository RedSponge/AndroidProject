<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="8">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1" android:text="@string/new_project_title" android:gravity="center"
        android:textSize="32sp" android:fontFamily="monospace"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="7">
        <TableRow>
            <TextView android:text="Project Name: " style="@style/InputText"/>
            <EditText android:layout_width="match_parent"/>
        </TableRow>
        <TableRow>

        </TableRow>
    </TableLayout>
</LinearLayout>