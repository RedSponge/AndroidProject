<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10">
    <com.redsponge.mycoolapp.utils.views.EditableTextView
        android:layout_width="0dp" android:layout_weight="2"
        app:alertTitle="Change Event Name"
        android:layout_height="match_parent" android:gravity="center" android:text="Event Name" android:id="@+id/event_name" />

    <com.redsponge.mycoolapp.utils.views.DateTextView
        android:layout_width="0dp" android:layout_weight="2"
        android:layout_height="match_parent" android:gravity="center" android:id="@+id/event_deadline" />

    <TextView
        android:layout_width="0dp" android:layout_weight="2"
        android:layout_height="match_parent" android:text="Status" android:gravity="center" android:id="@+id/event_status"/>

    <Button
        android:layout_width="0dp" android:layout_weight="2"
        android:layout_height="match_parent" android:text="Change" android:id="@+id/event_change_status_button"/>

    <Button
        android:layout_width="0dp" android:layout_weight="2"
        android:layout_height="match_parent" android:text="Delete" android:id="@+id/event_delete_button" />
</LinearLayout>